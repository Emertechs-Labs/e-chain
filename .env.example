# Echain Environment Variables Template
# Copy this file to .env.local for development
# For production, set these in your deployment platform (Vercel, etc.)
# NEVER commit actual secrets to this public repository!

# ==========================================
# BASE NETWORK CONFIGURATION
# ==========================================
NEXT_PUBLIC_BASE_RPC_URL=https://sepolia.base.org
NEXT_PUBLIC_BASE_CHAIN_ID=84532

# ==========================================
# MULTIPLE RPC PROVIDERS FOR PERFORMANCE
# ==========================================
# Primary: Base Public RPC (Free, reliable)
NEXT_PUBLIC_CHAINSTACK_RPC_URL=https://your-chainstack-rpc-url
NEXT_PUBLIC_CHAINSTACK_WS_URL=wss://your-chainstack-ws-url

# Secondary: Coinbase Node (Paid, premium)
NEXT_PUBLIC_COINBASE_RPC_URL=https://your-coinbase-rpc-url
NEXT_PUBLIC_COINBASE_WS_URL=wss://your-coinbase-ws-url

# Tertiary: Spectrum Nodes (Paid, fast)
NEXT_PUBLIC_SPECTRUM_RPC_URL=https://your-spectrum-rpc-url
NEXT_PUBLIC_SPECTRUM_WS_URL=wss://your-spectrum-ws-url

# ==========================================
# WALLET INTEGRATION
# ==========================================
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id
NEXT_PUBLIC_RAINBOWKIT_PROJECT_ID=your-walletconnect-project-id

# ==========================================
# COINBASE ONCHAINKIT
# ==========================================
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your-coinbase-api-key

# ==========================================
# EMAIL SERVICE CONFIGURATION
# ==========================================
# Primary: Resend (Recommended for beta)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@echain.app

# Alternative: SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@echain.app

# ==========================================
# SOCIAL AUTHENTICATION
# ==========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Twitter OAuth
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# Discord OAuth (Required for beta feedback)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ==========================================
# FARCASTER CONFIGURATION
# ==========================================
NEXT_PUBLIC_FARCASTER_HUB_URL=https://hub.farcaster.xyz
NEXT_PUBLIC_FARCASTER_APP_FID=your-farcaster-app-fid

# ==========================================
# SMART WALLET CONFIGURATION
# ==========================================
NEXT_PUBLIC_ACCOUNT_FACTORY_ADDRESS=0x9406Cc6185a346906296840746125a0E44976454
NEXT_PUBLIC_ENTRY_POINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789
NEXT_PUBLIC_PAYMASTER_ADDRESS=0x0000000000000000000000000000000000000000

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=your-database-url
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://your-vercel-domain.vercel.app

# ==========================================
# HEDERA CONFIGURATION
# ==========================================
NEXT_PUBLIC_HEDERA_NETWORK=testnet
NEXT_PUBLIC_HEDERA_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# ==========================================
# GOOGLE MAPS CONFIGURATION
# ==========================================
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==========================================
# SENTRY ERROR TRACKING
# ==========================================
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=echain-beta
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==========================================
# VERCEL ANALYTICS
# ==========================================
NEXT_PUBLIC_VERCEL_ANALYTICS=true

# ==========================================
# BETA FEEDBACK SYSTEM
# ==========================================
BETA_FEEDBACK_ENABLED=true
BETA_FEEDBACK_DISCORD_WEBHOOK=https://discord.com/api/webhooks/your-webhook-id/your-webhook-token
BETA_FEEDBACK_EMAIL_ENABLED=true

# ==========================================
# DEPLOYED CONTRACT ADDRESSES (BASE SEPOLIA)
# ==========================================
NEXT_PUBLIC_EVENT_FACTORY_ADDRESS=0xA97cB40548905B05A67fCD4765438aFBEA4030fc
NEXT_PUBLIC_EVENT_TICKET_ADDRESS=0xc8cd32F0b2a6EE43f465a3f88BC52955A805043C
