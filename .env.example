# ==========================================
# VERIFICATION CODES (FOR BETA ACCESS)
# ==========================================
BETA_ACCESS_CODE=echain-beta-2025
ADMIN_ACCESS_CODE=echain-admin-2025

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ==========================================
# CACHE CONFIGURATION
# ==========================================
CACHE_TTL_EVENTS=600000
CACHE_TTL_USERS=300000
CACHE_TTL_MARKETPLACE=300000

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_BETA_FEEDBACK=true
FEATURE_MARKETPLACE=true
FEATURE_POAP=true
FEATURE_INCENTIVES=true
FEATURE_SOCIAL_AUTH=false
FEATURE_FARCASTER=false

# ==========================================
# SECURITY
# ==========================================
CORS_ORIGIN=https://your-vercel-domain.vercel.app
SESSION_MAX_AGE=86400000
JWT_SECRET=your-jwt-secret-here

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_DISCORD_WEBHOOK=https://discord.com/api/webhooks/your-log-webhook-id/your-log-webhook-token

# ==========================================
# BACKUP CONFIGURATION
# ==========================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30