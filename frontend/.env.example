# Echain Frontend Environment Configuration
# =========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ============================================================================
# WALLET & WEB3 CONFIGURATION
# ============================================================================

# Reown (WalletConnect) Project ID
# Get from: https://cloud.reown.com/ (formerly WalletConnect Cloud)
# Required for: RainbowKit wallet connection
NEXT_PUBLIC_REOWN_PROJECT_ID=""

# Websocket Provider (Realtime updates)
# Managed WS endpoint (e.g. Alchemy, QuickNode) with African PoPs preferred
NEXT_PUBLIC_WS_PROVIDER=""

# ============================================================================
# BASE NETWORK RPC ENDPOINTS
# ============================================================================

# PRODUCTION: Use premium providers for reliability
# Chainstack (Recommended): https://chainstack.com/
NEXT_PUBLIC_BASE_MAINNET_CHAINSTACK_RPC=""
# Spectrum Nodes: https://spectrumnodes.com/?sPartner=gsd&gad_campaignid=22842687298
NEXT_PUBLIC_BASE_MAINNET_SPECTRUM_RPC=""
# Coinbase Base Node: https://www.coinbase.com/developer-platform/products/base-node
NEXT_PUBLIC_BASE_MAINNET_COINBASE_RPC=""
# Public RPC (fallback only, rate limited)
NEXT_PUBLIC_BASE_MAINNET_RPC_URL="https://mainnet.base.org"

# TESTNET: Base Sepolia for development
# Chainstack Testnet
NEXT_PUBLIC_BASE_SEPOLIA_CHAINSTACK_RPC=""
# Spectrum Nodes Testnet
NEXT_PUBLIC_BASE_SEPOLIA_SPECTRUM_RPC=""
# Coinbase Testnet
NEXT_PUBLIC_BASE_SEPOLIA_COINBASE_RPC=""
# Public Sepolia RPC (default)
NEXT_PUBLIC_BASE_SEPOLIA_RPC_URL="https://sepolia.base.org"

# Active Network (use mainnet or sepolia)
NEXT_PUBLIC_ACTIVE_NETWORK="sepolia"
NEXT_PUBLIC_CHAIN_ID="84532"

# ============================================================================
# DEPLOYED CONTRACT ADDRESSES (Base Sepolia)
# ============================================================================
# Verified on: https://sepolia.basescan.org

NEXT_PUBLIC_EVENT_FACTORY_ADDRESS="0xA97cB40548905B05A67fCD4765438aFBEA4030fc"
NEXT_PUBLIC_EVENT_TICKET_ADDRESS="0xc8cd32F0b2a6EE43f465a3f88BC52955A805043C"
NEXT_PUBLIC_POAP_ADDRESS="0x08344CfBfB3afB2e114A0dbABbaF40e7eB62FD33"
NEXT_PUBLIC_INCENTIVE_ADDRESS="0x1cfDae689817B954b72512bC82f23F35B997617D"
NEXT_PUBLIC_MARKETPLACE_ADDRESS="0xD061393A54784da5Fea48CC845163aBc2B11537A"

# ============================================================================
# STORAGE SERVICES
# ============================================================================

# Vercel Blob Storage (File Uploads)
# Get from: Vercel Dashboard → Storage → Blob → Create
# Used for: Event images, user uploads
BLOB_READ_WRITE_TOKEN=""

# Vercel Edge Config (Configuration Data)
# Get from: Vercel Dashboard → Storage → Edge Config → Create
# Used for: Feature flags, dynamic configuration
EDGE_CONFIG=""

# Pinata (IPFS Storage)
# Get from: https://app.pinata.cloud/
# Used for: NFT metadata, decentralized storage
PINATA_JWT=""
PINATA_GATEWAY=""
PINATA_WEBHOOK_SECRET=""

# Marketplace/Internal Webhooks
BASE_WEBHOOK_SECRET=""

# Payments Provider Webhook Secret (Stripe/Paystack)
PAYMENT_WEBHOOK_SECRET=""

# ============================================================================
# GOOGLE MAPS (Optional - for event location features)
# ============================================================================
# Get from: https://console.cloud.google.com/apis/credentials
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=""

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================

# Vercel Analytics (Automatic if deployed on Vercel)
# No configuration needed - auto-enabled

# Sentry (Error Tracking - Optional)
# Get from: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable debug mode (set to "true" for development)
NEXT_PUBLIC_DEBUG_MODE="false"

# Enable mock data (set to "true" to use mock data instead of blockchain)
NEXT_PUBLIC_USE_MOCK_DATA="false"

# API Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS="100"

# ============================================================================
# SECURITY SETTINGS (Server-side only - no NEXT_PUBLIC_ prefix)
# ============================================================================

# Session Secret (generate with: openssl rand -hex 32)
SESSION_SECRET=""

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=""

# API Keys (keep these server-side only)
ADMIN_API_KEY=""

# ============================================================================
# OPTIONAL: MULTI-CHAIN SUPPORT (Future)
# ============================================================================

# Polkadot Network
NEXT_PUBLIC_POLKADOT_RPC_URL=""
NEXT_PUBLIC_POLKADOT_CHAIN_ID=""

# Cardano Network
NEXT_PUBLIC_CARDANO_RPC_URL=""
NEXT_PUBLIC_CARDANO_NETWORK_ID=""

# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================

# Auto-set by Vercel, but can override for testing
# Options: development | preview | production
NEXT_PUBLIC_VERCEL_ENV="development"

# ============================================================================
# SETUP VERIFICATION
# ============================================================================
# After filling in your values, run: npm run validate:env
# This will check all required environment variables are set
